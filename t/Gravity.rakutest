#-------------------------------------------------------------------------------
subtest 'Enum test', {
  is-deeply (
    PANGO_GRAVITY_SOUTH.value,
    PANGO_GRAVITY_EAST.value,
    PANGO_GRAVITY_NORTH.value,
    PANGO_GRAVITY_WEST.value,
    PANGO_GRAVITY_AUTO.value
  ), ( 0, 1, 2, 3, 4), 'enum PangoGravity';

