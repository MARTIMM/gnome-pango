    PANGO_GRAVITY_HINT_NATURAL.value,
    PANGO_GRAVITY_HINT_STRONG.value,
    PANGO_GRAVITY_HINT_LINE.value
 ), ( 0, 1, 2), 'enum PangoGravityHint';

}

